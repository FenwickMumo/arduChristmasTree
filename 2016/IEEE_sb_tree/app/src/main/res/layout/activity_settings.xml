<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.ioannina.ieeesb.ieee_sb_tree.Settings">

        <TextView
            android:id="@+id/adddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_address_txt"/>

        <EditText
            android:id="@+id/adddress_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/adddress"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:singleLine="true"
            android:hint="@string/settings_address_hint" />

        <TextView
            android:id="@+id/port"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/adddress_editText"
            android:text="@string/settings_port_txt"/>

        <EditText
            android:id="@+id/port_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/port"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:singleLine="true"
            android:hint="@string/settings_port_hint" />

        <Button
            android:id="@+id/new_record_create_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/port_editText"
            android:layout_marginTop="60dp"
            android:ems="10"
            android:layout_centerHorizontal="true"
            android:text="@string/settings_confirm_button"
            android:textColor="#FFFFFF"
            android:onClick="saveSettings"
            android:background="#333355" />

    </RelativeLayout>
</ScrollView>